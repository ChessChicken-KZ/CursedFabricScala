{
  "schemaVersion": 1,
  "id": "cursedfabricscala",
  "version": "${version}",

  "name": "Cursed Fabric Scala",
  "description": "A small mod adapter and Scala libraries provider allowing coding and running mods written on Scala for babric.",

  "authors": [
    "ChessChicken-KZ",
    "Scala developers"
  ],
  "contact": {
    "sources": "https://github.com/ChessChicken-KZ/CursedFabricScala"
  },

  "icon": "assets/cursedfabricscala/icon.png",
  "license": "Apache License 2.0",

  "environment": "*",

  "languageAdapters": {
    "scala": "kz.chesschicken.scalaadapter.CursedFabricScalaAdapter"
  },

  "depends": {
    "fabricloader": ">=0.13.3",
    "minecraft": "1.0.0-beta.7.3"
  },

  "custom": {
    "modmenu:api": true
  }
}
